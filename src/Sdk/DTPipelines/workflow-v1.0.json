{
  "version": "workflow-v1.0",

  "definitions": {

    "workflow-root": {
      "description": "Workflow file",
      "mapping": {
        "properties": {
          "on": "any",
          "name": "string",
          "jobs": "jobs"
        }
      }
    },

    "actions-template-root": {
      "description": "Actions template file",
      "mapping": {
        "properties": {
          "inputs": "actions-template-inputs",
          "outputs": "actions-template-outputs",
          "actions": "actions-in-template"
        }
      }
    },

    "actions-scope-inputs": {
      "description": "Used when evaluating actions scope inputs",
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "actions-scope-input-value"
      }
    },

    "actions-scope-input-value": {
      "context": [
        "strategy",
        "matrix",
        "parallel",
        "secrets",
        "actions",
        "inputs"
      ],
      "one-of": [
        "string",
        "sequence",
        "mapping"
      ]
    },

    "actions-scope-outputs": {
      "description": "Used when evaluating actions scope outputs",
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "actions-scope-output-value"
      }
    },

    "actions-scope-output-value": {
      "context": [
        "strategy",
        "matrix",
        "parallel",
        "secrets",
        "actions",
        "inputs"
      ],
      "string": {}
    },

    "actions-template-inputs": {
      "description": "Allowed inputs in an actions template",
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "actions-template-input-value"
      }
    },

    "actions-template-input-value": {
      "description": "Default input values for an actions template",
      "context": [
        "strategy",
        "matrix",
        "parallel"
      ],
      "one-of": [
        "string",
        "sequence",
        "mapping"
      ]
    },

    "actions-template-outputs": {
      "description": "Output mapping for an actions template",
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "actions-template-output-value"
      }
    },

    "actions-template-output-value": {
      "description": "Output values for an actions template",
      "context": [
        "strategy",
        "matrix",
        "parallel",
        "secrets",
        "actions"
      ],
      "string": {}
    },

    "jobs": {
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "job"
      }
    },

    "job": {
      "mapping": {
        "properties": {
          "needs": "needs",
          "strategy": "strategy",
          "name": "string-strategy-context",
          "runs-on": "runs-on",
          "timeout": "number-strategy-context",
          "cancel-timeout": "number-strategy-context",
          "continue-on-error": "boolean",
          "container": "container",
          "services": "services",
          "actions": "actions"
        }
      }
    },

    "needs": {
      "one-of": [
        "sequence-of-non-empty-string",
        "non-empty-string"
      ]
    },

    "strategy": {
      "mapping": {
        "properties": {
          "fail-fast": "boolean",
          "max-parallel": "number",
          "matrix": "matrix",
          "parallel": "number"
        }
      }
    },

    "matrix": {
      "mapping": {
        "properties": {
          "include": "matrix-include",
          "exclude": "matrix-exclude"
        },
        "loose-key-type": "non-empty-string",
        "loose-value-type": "sequence"
      }
    },

    "matrix-include": {
      "sequence": {
        "item-type": "matrix-include-item"
      }
    },

    "matrix-include-item": {
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "any"
      }
    },

    "matrix-exclude": {
      "sequence": {
        "item-type": "matrix-exclude-item"
      }
    },

    "matrix-exclude-item": {
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "matrix-exclude-filter-item"
      }
    },

    "matrix-exclude-filter-item": {
      "one-of": [
        "string",
        "matrix-exclude-mapping-filter"
      ]
    },

    "matrix-exclude-mapping-filter": {
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "matrix-exclude-filter-item"
      }
    },

    "runs-on": {
      "context": [
        "strategy",
        "matrix",
        "parallel"
      ],
      "one-of": [
        "runs-on-string",
        "runs-on-mapping"
      ]
    },

    "runs-on-string": {
      "string": {
        "require-non-empty": true
      }
    },

    "runs-on-mapping": {
      "mapping": {
        "properties": {
          "pool": "non-empty-string"
        }
      }
    },

    "actions": {
      "sequence": {
        "item-type": "actions-item"
      }
    },

    "actions-in-template": {
      "sequence": {
        "item-type": "actions-item-in-template"
      }
    },

    "actions-item": {
      "one-of": [
        "checkout-action",
        "run-action",
        "regular-action",
        "actions-template-reference"
      ]
    },

    "actions-item-in-template": {
      "one-of": [
        "checkout-action-in-template",
        "run-action-in-template",
        "regular-action-in-template",
        "actions-template-reference-in-template"
      ]
    },

    "checkout-action": {
      "mapping": {
        "properties": {
          "name": "string-actions-context",
          "id": "non-empty-string",
          "if": "string",
          "timeout": "number",
          "checkout": "non-empty-string",
          "path": "string-actions-context",
          "clean": "boolean-actions-context",
          "fetch-depth": "number-actions-context",
          "lfs": "boolean-actions-context",
          "submodules": "string-actions-context"
        }
      }
    },

    "checkout-action-in-template": {
      "mapping": {
        "properties": {
          "name": "string-actions-context-in-template",
          "id": "non-empty-string",
          "if": "string",
          "timeout": "number",
          "checkout": "non-empty-string",
          "path": "string-actions-context-in-template",
          "clean": "boolean-actions-context-in-template",
          "fetch-depth": "number-actions-context-in-template",
          "lfs": "boolean-actions-context-in-template",
          "submodules": "string-actions-context-in-template"
        }
      }
    },

    "run-action": {
      "mapping": {
        "properties": {
          "name": "string-actions-context",
          "id": "non-empty-string",
          "if": "string",
          "timeout": "number",
          "run": "string-actions-context",
          "env": "action-env",
          "working-directory": "string-actions-context"
        }
      }
    },

    "run-action-in-template": {
      "mapping": {
        "properties": {
          "name": "string-actions-context-in-template",
          "id": "non-empty-string",
          "if": "string",
          "timeout": "number",
          "run": "string-actions-context-in-template",
          "env": "action-env-in-template",
          "working-directory": "string-actions-context-in-template"
        }
      }
    },

    "regular-action": {
      "mapping": {
        "properties": {
          "name": "string-actions-context",
          "id": "non-empty-string",
          "if": "string",
          "timeout": "number",
          "uses": "non-empty-string",
          "with": "action-with",
          "env": "action-env"
        }
      }
    },

    "regular-action-in-template": {
      "mapping": {
        "properties": {
          "name": "string-actions-context-in-template",
          "id": "non-empty-string",
          "if": "string",
          "timeout": "number",
          "uses": "non-empty-string",
          "with": "action-with-in-template",
          "env": "action-env-in-template"
        }
      }
    },

    "actions-template-reference": {
      "mapping": {
        "properties": {
          "template": "non-empty-string",
          "id": "non-empty-string",
          "inputs": "actions-template-reference-inputs"
        }
      }
    },

    "actions-template-reference-in-template": {
      "mapping": {
        "properties": {
          "template": "non-empty-string",
          "id": "non-empty-string",
          "inputs": "actions-template-reference-inputs-in-template"
        }
      }
    },

    "actions-template-reference-inputs": {
      "context": [
        "strategy",
        "matrix",
        "parallel",
        "secrets",
        "actions"
      ],
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "string"
      }
    },

    "actions-template-reference-inputs-in-template": {
      "context": [
        "strategy",
        "matrix",
        "parallel",
        "secrets",
        "actions",
        "inputs"
      ],
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "string"
      }
    },

    "action-env": {
      "context": [
        "strategy",
        "matrix",
        "parallel",
        "secrets",
        "actions",
        "github"
      ],
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "string"
      }
    },

    "action-env-in-template": {
      "context": [
        "strategy",
        "matrix",
        "parallel",
        "secrets",
        "actions",
        "inputs"
      ],
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "string"
      }
    },

    "action-with": {
      "context": [
        "strategy",
        "matrix",
        "parallel",
        "secrets",
        "actions",
        "github"
      ],
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "string"
      }
    },

    "container": {
      "context": [
        "strategy",
        "matrix",
        "parallel"
      ],
      "one-of": [
        "non-empty-string",
        "container-mapping"
      ]
    },

    "container-mapping": {
      "mapping": {
        "properties": {
          "image": "non-empty-string",
          "options": "non-empty-string",
          "env": "container-env",
          "ports": "sequence-of-non-empty-string",
          "volumes": "sequence-of-non-empty-string"
        }
      }
    },

    "services": {
      "context": [
        "strategy",
        "matrix",
        "parallel"
      ],
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "container"
      }
    },

    "container-env": {
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "string"
      }
    },

    "action-with-in-template": {
      "context": [
        "strategy",
        "matrix",
        "parallel",
        "secrets",
        "actions",
        "inputs"
      ],
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "string"
      }
    },

    "non-empty-string": {
      "string": {
        "require-non-empty": true
      }
    },

    "sequence-of-non-empty-string": {
      "sequence": {
        "item-type": "non-empty-string"
      }
    },

    "number-strategy-context": {
      "context": [
        "strategy",
        "matrix",
        "parallel"
      ],
      "number": {}
    },

    "string-strategy-context": {
      "context": [
        "strategy",
        "matrix",
        "parallel"
      ],
      "string": {}
    },

    "boolean-actions-context": {
      "context": [
        "strategy",
        "matrix",
        "parallel",
        "secrets",
        "actions",
        "github"
      ],
      "boolean": {}
    },

    "boolean-actions-context-in-template": {
      "context": [
        "strategy",
        "matrix",
        "parallel",
        "secrets",
        "actions",
        "github",
        "inputs"
      ],
      "boolean": {}
    },

    "number-actions-context": {
      "context": [
        "strategy",
        "matrix",
        "parallel",
        "secrets",
        "actions",
        "github"
      ],
      "number": {}
    },

    "number-actions-context-in-template": {
      "context": [
        "strategy",
        "matrix",
        "parallel",
        "secrets",
        "actions",
        "github",
        "inputs"
      ],
      "number": {}
    },

    "string-actions-context": {
      "context": [
        "strategy",
        "matrix",
        "parallel",
        "secrets",
        "actions",
        "github"
      ],
      "string": {}
    },

    "string-actions-context-in-template": {
      "context": [
        "strategy",
        "matrix",
        "parallel",
        "secrets",
        "actions",
        "inputs"
      ],
      "string": {}
    }
  }
}