{
  "version": "workflow-v1.0",

  "definitions": {

    "workflow-root": {
      "description": "Workflow file",
      "mapping": {
        "properties": {
          "on": "any",
          "name": "string",
          "jobs": "jobs"
        }
      }
    },

    "steps-template-root": {
      "description": "Steps template file",
      "mapping": {
        "properties": {
          "inputs": "steps-template-inputs",
          "outputs": "steps-template-outputs",
          "steps": "steps-in-template"
        }
      }
    },

    "steps-scope-inputs": {
      "description": "Used when evaluating steps scope inputs",
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "steps-scope-input-value"
      }
    },

    "steps-scope-input-value": {
      "context": [
        "strategy",
        "matrix",
        "secrets",
        "steps",
        "inputs",
        "job",
        "runner"
      ],
      "one-of": [
        "string",
        "sequence",
        "mapping"
      ]
    },

    "steps-scope-outputs": {
      "description": "Used when evaluating steps scope outputs",
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "steps-scope-output-value"
      }
    },

    "steps-scope-output-value": {
      "context": [
        "strategy",
        "matrix",
        "secrets",
        "steps",
        "inputs",
        "job",
        "runner"
      ],
      "string": {}
    },

    "steps-template-inputs": {
      "description": "Allowed inputs in a steps template",
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "steps-template-input-value"
      }
    },

    "steps-template-input-value": {
      "description": "Default input values for a steps template",
      "context": [
        "strategy",
        "matrix"
      ],
      "one-of": [
        "string",
        "sequence",
        "mapping"
      ]
    },

    "steps-template-outputs": {
      "description": "Output mapping for a steps template",
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "steps-template-output-value"
      }
    },

    "steps-template-output-value": {
      "description": "Output values for a steps template",
      "context": [
        "strategy",
        "matrix",
        "secrets",
        "steps",
        "job",
        "runner"
      ],
      "string": {}
    },

    "jobs": {
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "job"
      }
    },

    "job": {
      "one-of": [
        "job-with-steps",
        "job-with-actions"
      ]
    },

    "job-with-steps": {
      "mapping": {
        "properties": {
          "needs": "needs",
          "strategy": "strategy",
          "name": "string-strategy-context",
          "runs-on": "runs-on",
          "timeout": "number-strategy-context",
          "cancel-timeout": "number-strategy-context",
          "continue-on-error": "boolean",
          "container": "container",
          "services": "services",
          "steps": "steps"
        }
      }
    },

    "job-with-actions": {
      "mapping": {
        "properties": {
          "needs": "needs",
          "strategy": "strategy",
          "name": "string-strategy-context",
          "runs-on": "runs-on",
          "timeout": "number-strategy-context",
          "cancel-timeout": "number-strategy-context",
          "continue-on-error": "boolean",
          "container": "container",
          "services": "services",
          "actions": "steps"
        }
      }
    },

    "needs": {
      "one-of": [
        "sequence-of-non-empty-string",
        "non-empty-string"
      ]
    },

    "strategy": {
      "mapping": {
        "properties": {
          "fail-fast": "boolean",
          "max-parallel": "number",
          "matrix": "matrix"
        }
      }
    },

    "matrix": {
      "mapping": {
        "properties": {
          "include": "matrix-include",
          "exclude": "matrix-exclude"
        },
        "loose-key-type": "non-empty-string",
        "loose-value-type": "sequence"
      }
    },

    "matrix-include": {
      "sequence": {
        "item-type": "matrix-include-item"
      }
    },

    "matrix-include-item": {
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "any"
      }
    },

    "matrix-exclude": {
      "sequence": {
        "item-type": "matrix-exclude-item"
      }
    },

    "matrix-exclude-item": {
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "matrix-exclude-filter-item"
      }
    },

    "matrix-exclude-filter-item": {
      "one-of": [
        "string",
        "matrix-exclude-mapping-filter"
      ]
    },

    "matrix-exclude-mapping-filter": {
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "matrix-exclude-filter-item"
      }
    },

    "runs-on": {
      "context": [
        "strategy",
        "matrix"
      ],
      "one-of": [
        "runs-on-string",
        "runs-on-mapping"
      ]
    },

    "runs-on-string": {
      "string": {
        "require-non-empty": true
      }
    },

    "runs-on-mapping": {
      "mapping": {
        "properties": {
          "pool": "non-empty-string"
        }
      }
    },

    "steps": {
      "sequence": {
        "item-type": "steps-item"
      }
    },

    "steps-in-template": {
      "sequence": {
        "item-type": "steps-item-in-template"
      }
    },

    "steps-item": {
      "one-of": [
        "checkout-step",
        "run-step",
        "regular-step",
        "steps-template-reference"
      ]
    },

    "steps-item-in-template": {
      "one-of": [
        "checkout-step-in-template",
        "run-step-in-template",
        "regular-step-in-template",
        "steps-template-reference-in-template"
      ]
    },

    "checkout-step": {
      "mapping": {
        "properties": {
          "name": "string-steps-context",
          "id": "non-empty-string",
          "if": "string",
          "timeout": "number",
          "checkout": "non-empty-string",
          "path": "string-steps-context",
          "continue-on-error": "boolean",
          "clean": "boolean-steps-context",
          "fetch-depth": "number-steps-context",
          "lfs": "boolean-steps-context",
          "submodules": "string-steps-context"
        }
      }
    },

    "checkout-step-in-template": {
      "mapping": {
        "properties": {
          "name": "string-steps-context-in-template",
          "id": "non-empty-string",
          "if": "string",
          "timeout": "number",
          "checkout": "non-empty-string",
          "path": "string-steps-context-in-template",
          "continue-on-error": "boolean",
          "clean": "boolean-steps-context-in-template",
          "fetch-depth": "number-steps-context-in-template",
          "lfs": "boolean-steps-context-in-template",
          "submodules": "string-steps-context-in-template"
        }
      }
    },

    "run-step": {
      "mapping": {
        "properties": {
          "name": "string-steps-context",
          "id": "non-empty-string",
          "if": "string",
          "timeout": "number",
          "run": "string-steps-context",
          "continue-on-error": "boolean",
          "env": "step-env",
          "working-directory": "string-steps-context",
          "shell": "non-empty-string"
        }
      }
    },

    "run-step-in-template": {
      "mapping": {
        "properties": {
          "name": "string-steps-context-in-template",
          "id": "non-empty-string",
          "if": "string",
          "timeout": "number",
          "run": "string-steps-context-in-template",
          "continue-on-error": "boolean",
          "env": "step-env-in-template",
          "working-directory": "string-steps-context-in-template",
          "shell": "non-empty-string"
        }
      }
    },

    "regular-step": {
      "mapping": {
        "properties": {
          "name": "string-steps-context",
          "id": "non-empty-string",
          "if": "string",
          "continue-on-error": "boolean",
          "timeout": "number",
          "uses": "non-empty-string",
          "with": "step-with",
          "env": "step-env"
        }
      }
    },

    "regular-step-in-template": {
      "mapping": {
        "properties": {
          "name": "string-steps-context-in-template",
          "id": "non-empty-string",
          "if": "string",
          "continue-on-error": "boolean",
          "timeout": "number",
          "uses": "non-empty-string",
          "with": "step-with-in-template",
          "env": "step-env-in-template"
        }
      }
    },

    "steps-template-reference": {
      "mapping": {
        "properties": {
          "template": "non-empty-string",
          "id": "non-empty-string",
          "inputs": "steps-template-reference-inputs"
        }
      }
    },

    "steps-template-reference-in-template": {
      "mapping": {
        "properties": {
          "template": "non-empty-string",
          "id": "non-empty-string",
          "inputs": "steps-template-reference-inputs-in-template"
        }
      }
    },

    "steps-template-reference-inputs": {
      "context": [
        "strategy",
        "matrix",
        "secrets",
        "steps",
        "job",
        "runner"
      ],
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "string"
      }
    },

    "steps-template-reference-inputs-in-template": {
      "context": [
        "strategy",
        "matrix",
        "secrets",
        "steps",
        "inputs",
        "job",
        "runner"
      ],
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "string"
      }
    },

    "step-env": {
      "context": [
        "strategy",
        "matrix",
        "secrets",
        "steps",
        "github",
        "job",
        "runner"
      ],
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "string"
      }
    },

    "step-env-in-template": {
      "context": [
        "strategy",
        "matrix",
        "secrets",
        "steps",
        "inputs",
        "job",
        "runner"
      ],
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "string"
      }
    },

    "step-with": {
      "context": [
        "strategy",
        "matrix",
        "secrets",
        "steps",
        "github",
        "job",
        "runner"
      ],
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "string"
      }
    },

    "container": {
      "context": [
        "strategy",
        "matrix"
      ],
      "one-of": [
        "non-empty-string",
        "container-mapping"
      ]
    },

    "container-mapping": {
      "mapping": {
        "properties": {
          "image": "non-empty-string",
          "options": "non-empty-string",
          "env": "container-env",
          "ports": "sequence-of-non-empty-string",
          "volumes": "sequence-of-non-empty-string"
        }
      }
    },

    "services": {
      "context": [
        "strategy",
        "matrix"
      ],
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "container"
      }
    },

    "container-env": {
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "string"
      }
    },

    "step-with-in-template": {
      "context": [
        "strategy",
        "matrix",
        "secrets",
        "steps",
        "inputs",
        "job",
        "runner"
      ],
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "string"
      }
    },

    "non-empty-string": {
      "string": {
        "require-non-empty": true
      }
    },

    "sequence-of-non-empty-string": {
      "sequence": {
        "item-type": "non-empty-string"
      }
    },

    "number-strategy-context": {
      "context": [
        "strategy",
        "matrix"
      ],
      "number": {}
    },

    "string-strategy-context": {
      "context": [
        "strategy",
        "matrix"
      ],
      "string": {}
    },

    "boolean-steps-context": {
      "context": [
        "strategy",
        "matrix",
        "secrets",
        "steps",
        "github",
        "job",
        "runner"
      ],
      "boolean": {}
    },

    "boolean-steps-context-in-template": {
      "context": [
        "strategy",
        "matrix",
        "secrets",
        "steps",
        "github",
        "inputs",
        "job",
        "runner"
      ],
      "boolean": {}
    },

    "number-steps-context": {
      "context": [
        "strategy",
        "matrix",
        "secrets",
        "steps",
        "github",
        "job",
        "runner"
      ],
      "number": {}
    },

    "number-steps-context-in-template": {
      "context": [
        "strategy",
        "matrix",
        "secrets",
        "steps",
        "github",
        "inputs",
        "job",
        "runner"
      ],
      "number": {}
    },

    "string-steps-context": {
      "context": [
        "strategy",
        "matrix",
        "secrets",
        "steps",
        "github",
        "job",
        "runner"
      ],
      "string": {}
    },

    "string-steps-context-in-template": {
      "context": [
        "strategy",
        "matrix",
        "secrets",
        "steps",
        "inputs",
        "job",
        "runner"
      ],
      "string": {}
    }
  }
}