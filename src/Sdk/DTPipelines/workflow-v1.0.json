{
  "version": "workflow-v1.0",

  "definitions": {

    "workflow-root": {
      "description": "Workflow file",
      "mapping": {
        "properties": {
          "on": "workflow-on",
          "name": "string",
          "defaults": "workflow-defaults",
          "env": "workflow-env",
          "jobs": "jobs",
          "permissions": "permissions",
          "concurrency": "workflow-concurrency"
        }
      }
    },

    "workflow-defaults": {
      "mapping": {
        "properties": {
          "run": "workflow-defaults-run"
        }
      }
    },

    "workflow-defaults-run": {
      "mapping": {
        "properties": {
          "shell": "non-empty-string",
          "working-directory": "non-empty-string"
        }
      }
    },

    "workflow-env": {
      "context": [
        "github",
        "inputs",
        "secrets"
      ],
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "string"
      }
    },

    "jobs": {
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "job"
      }
    },

    "job": {
      "one-of": [
        "regular-job",
        "uses-job"
      ]
    },

    "regular-job": {
      "mapping": {
        "properties": {
          "needs": "needs",
          "if": "job-if",
          "strategy": "strategy",
          "name": "string-strategy-context",
          "runs-on": {
            "type": "runs-on",
            "required": true
          },
          "timeout-minutes": "number-strategy-context",
          "cancel-timeout-minutes": "number-strategy-context",
          "continue-on-error": "boolean-strategy-context",
          "container": "container",
          "services": "services",
          "env": "job-env",
          "outputs": "job-outputs",
          "defaults": "job-defaults",
          "environment": "environment",
          "permissions": "permissions",
          "concurrency": "job-concurrency",
          "steps": {
            "type": "steps",
            "required": true
          }
        }
      }
    },

    "uses-job": {
      "mapping": {
        "properties": {
          "needs": "needs",
          "if": "job-if",
          "name": "string-strategy-context",
          "uses": {
            "type": "non-empty-string",
            "required": true
          },
          "with": "job-with",
          "secrets": "job-secrets",
          "permissions": "permissions"
        }
      }
    },

    "job-with": {
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "job-with-entry"
      }
    },

    "job-with-entry": {
      "context": [
        "github",
        "needs"
      ],
      "one-of": [
        "boolean",
        "number",
        "string"
      ]
    },

    "job-secrets": {
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "job-secret-entry"
      }
    },

    "job-secret-entry": {
      "context": [
        "github",
        "needs",
        "secrets"
      ],
      "string": {}
    },

    "needs": {
      "one-of": [
        "sequence-of-non-empty-string",
        "non-empty-string"
      ]
    },

    "job-if": {
      "context": [
        "github",
        "inputs",
        "needs",
        "always(0,0)",
        "failure(0,MAX)",
        "cancelled(0,0)",
        "success(0,MAX)"
      ],
      "string": {}
    },

    "job-if-result": {
      "context": [
        "github",
        "inputs",
        "needs",
        "always(0,0)",
        "failure(0,MAX)",
        "cancelled(0,0)",
        "success(0,MAX)"
      ],
      "one-of": [
        "null",
        "boolean",
        "number",
        "string",
        "sequence",
        "mapping"
      ]
    },

    "strategy": {
      "context": [
        "github",
        "inputs",
        "needs"
      ],
      "mapping": {
        "properties": {
          "fail-fast": "boolean",
          "max-parallel": "number",
          "matrix": "matrix"
        }
      }
    },

    "matrix": {
      "mapping": {
        "properties": {
          "include": "matrix-filter",
          "exclude": "matrix-filter"
        },
        "loose-key-type": "non-empty-string",
        "loose-value-type": "sequence"
      }
    },

    "matrix-filter": {
      "sequence": {
        "item-type": "matrix-filter-item"
      }
    },

    "matrix-filter-item": {
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "any"
      }
    },

    "runs-on": {
      "context": [
        "github",
        "inputs",
        "needs",
        "strategy",
        "matrix"
      ],
      "one-of": [
        "non-empty-string",
        "sequence-of-non-empty-string"
      ]
    },

    "job-env": {
      "context": [
        "github",
        "inputs",
        "needs",
        "strategy",
        "matrix",
        "secrets"
      ],
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "string"
      }
    },

    "job-defaults": {
      "mapping": {
        "properties": {
          "run": "job-defaults-run"
        }
      }
    },

    "job-defaults-run": {
      "context": [
        "github",
        "inputs",
        "strategy",
        "matrix",
        "needs",
        "env"
      ],
      "mapping": {
        "properties": {
          "shell": "non-empty-string",
          "working-directory": "non-empty-string"
        }
      }
    },

    "job-outputs": {
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "string-runner-context"
      }
    },

    "environment": {
      "context": [
        "github",
        "inputs",
        "needs",
        "strategy",
        "matrix"
      ],
      "one-of": ["non-empty-string", "environment-mapping" ]
    },
    "environment-mapping": {
      "mapping": {
        "properties":{
          "name": "non-empty-string",
          "url": "string-runner-context-no-secrets"
        }
      }
    },

    "permissions": {
      "one-of": ["non-empty-string", "permissions-mapping" ]
    },
    "permissions-mapping": {
      "mapping": {
        "properties": {
          "actions": "non-empty-string",
          "checks": "non-empty-string",
          "contents": "non-empty-string",
          "deployments": "non-empty-string",
          "discussions": "non-empty-string",
          "id-token": "non-empty-string",
          "issues": "non-empty-string",
          "packages": "non-empty-string",
          "pull-requests": "non-empty-string",
          "repository-projects": "non-empty-string",
          "security-events": "non-empty-string",
          "statuses": "non-empty-string"
        }
      }
    },

    "workflow-concurrency": {
      "context":[
        "github",
        "inputs"
      ],
      "one-of": ["non-empty-string", "concurrency-mapping" ]
    },
    "job-concurrency": {
      "context":[
        "github",
        "inputs",
        "needs",
        "strategy",
        "matrix"
      ],
      "one-of": ["non-empty-string", "concurrency-mapping" ]
    },
    "concurrency-mapping": {
      "mapping": {
        "properties": {
          "group": "non-empty-string",
          "cancel-in-progress": "boolean"
        }
      }
    },

    "steps": {
      "sequence": {
        "item-type": "steps-item"
      }
    },

    "steps-item": {
      "one-of": [
        "run-step",
        "regular-step"
      ]
    },

    "run-step": {
      "mapping": {
        "properties": {
          "name": "string-steps-context",
          "id": "non-empty-string",
          "if": "step-if",
          "timeout-minutes": "number-steps-context",
          "run": {
            "type": "string-steps-context",
            "required": true
          },
          "continue-on-error": "boolean-steps-context",
          "env": "step-env",
          "working-directory": "string-steps-context",
          "shell": "non-empty-string"
        }
      }
    },

    "regular-step": {
      "mapping": {
        "properties": {
          "name": "string-steps-context",
          "id": "non-empty-string",
          "if": "step-if",
          "continue-on-error": "boolean-steps-context",
          "timeout-minutes": "number-steps-context",
          "uses": {
            "type": "non-empty-string",
            "required": true
          },
          "with": "step-with",
          "env": "step-env"
        }
      }
    },

    "step-if": {
      "context": [
        "github",
        "inputs",
        "needs",
        "strategy",
        "matrix",
        "steps",
        "job",
        "runner",
        "env",
        "always(0,0)",
        "failure(0,0)",
        "cancelled(0,0)",
        "success(0,0)",
        "hashFiles(1,255)"
      ],
      "string": {}
    },

    "step-if-result": {
      "context": [
        "github",
        "inputs",
        "strategy",
        "matrix",
        "steps",
        "job",
        "runner",
        "env",
        "always(0,0)",
        "failure(0,0)",
        "cancelled(0,0)",
        "success(0,0)",
        "hashFiles(1,255)"
      ],
      "one-of": [
        "null",
        "boolean",
        "number",
        "string",
        "sequence",
        "mapping"
      ]
    },

    "step-env": {
      "context": [
        "github",
        "inputs",
        "needs",
        "strategy",
        "matrix",
        "secrets",
        "steps",
        "job",
        "runner",
        "env",
        "hashFiles(1,255)"
      ],
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "string"
      }
    },

    "step-with": {
      "context": [
        "github",
        "inputs",
        "needs",
        "strategy",
        "matrix",
        "secrets",
        "steps",
        "job",
        "runner",
        "env",
        "hashFiles(1,255)"
      ],
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "string"
      }
    },

    "container": {
      "context": [
        "github",
        "inputs",
        "needs",
        "strategy",
        "matrix"
      ],
      "one-of": [
        "string",
        "container-mapping"
      ]
    },

    "container-mapping": {
      "mapping": {
        "properties": {
          "image": "non-empty-string",
          "options": "non-empty-string",
          "env": "container-env",
          "ports": "sequence-of-non-empty-string",
          "volumes": "sequence-of-non-empty-string",
          "credentials": "container-registry-credentials"
        }
      }
    },

    "services": {
      "context": [
        "github",
        "inputs",
        "needs",
        "strategy",
        "matrix"
      ],
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "services-container"
      }
    },

    "services-container": {
      "context": [
        "github",
        "inputs",
        "needs",
        "strategy",
        "matrix"
      ],
      "one-of": [
        "non-empty-string",
        "container-mapping"
      ]
    },

    "container-registry-credentials": {
      "context": [
        "secrets",
        "env",
        "github",
        "inputs"
      ],
      "mapping": {
        "properties": {
          "username": "non-empty-string",
          "password": "non-empty-string"
        }
      }
    },

    "container-env": {
      "mapping": {
        "loose-key-type": "non-empty-string",
        "loose-value-type": "string-runner-context"
      }
    },

    "non-empty-string": {
      "string": {
        "require-non-empty": true
      }
    },

    "sequence-of-non-empty-string": {
      "sequence": {
        "item-type": "non-empty-string"
      }
    },

    "boolean-strategy-context": {
      "context": [
        "github",
        "inputs",
        "needs",
        "strategy",
        "matrix"
      ],
      "boolean": {}
    },

    "number-strategy-context": {
      "context": [
        "github",
        "inputs",
        "needs",
        "strategy",
        "matrix"
      ],
      "number": {}
    },

    "string-strategy-context": {
      "context": [
        "github",
        "inputs",
        "needs",
        "strategy",
        "matrix"
      ],
      "string": {}
    },

    "boolean-steps-context": {
      "context": [
        "github",
        "inputs",
        "needs",
        "strategy",
        "matrix",
        "secrets",
        "steps",
        "job",
        "runner",
        "env",
        "hashFiles(1,255)"
      ],
      "boolean": {}
    },

    "number-steps-context": {
      "context": [
        "github",
        "inputs",
        "needs",
        "strategy",
        "matrix",
        "secrets",
        "steps",
        "job",
        "runner",
        "env",
        "hashFiles(1,255)"
      ],
      "number": {}
    },

    "string-runner-context": {
      "context": [
        "github",
        "inputs",
        "needs",
        "strategy",
        "matrix",
        "secrets",
        "steps",
        "job",
        "runner",
        "env"
      ],
      "string": {}
    },

    "string-runner-context-no-secrets": {
      "context": [
        "github",
        "inputs",
        "needs",
        "strategy",
        "matrix",
        "steps",
        "job",
        "runner",
        "env"
      ],
      "string": {}
    },

    "string-steps-context": {
      "context": [
        "github",
        "inputs",
        "needs",
        "strategy",
        "matrix",
        "secrets",
        "steps",
        "job",
        "runner",
        "env",
        "hashFiles(1,255)"
      ],
      "string": {}
    },

    "workflow-on": {
      "one-of":[
        "null",
        "boolean",
        "number",
        "string",
        "sequence",
        "workflow-on-mapping"
      ]
    },

    "workflow-on-mapping": {
      "mapping": {
        "properties":{
          "workflow_call": "workflow_call_wrap",
          "workflow_dispatch": "workflow_dispatch_wrap"
        },
        "loose-key-type": "any",
        "loose-value-type": "any"
      }
    },

    "workflow_call_wrap": {
      "one-of":[
        "null",
        "workflow_call"
      ]
    },

    "workflow_call": {
      "mapping": {
        "properties":{
          "inputs": "workflow_call-inputs",
          "outputs": "workflow_call-outputs"
        },
        "loose-key-type": "any",
        "loose-value-type": "any"
      }
    },

    "workflow_call-inputs": {
      "mapping": {
        "loose-key-type": "any",
        "loose-value-type": "workflow_call-input"
      }
    },

    "workflow_call-input": {
      "mapping": {
        "properties":{
          "default": "workflow_call-input-context"
        },
        "loose-key-type": "any",
        "loose-value-type": "any"
      }
    },

    "workflow_call-input-context": {
      "context": [
        "github"
      ],
      "one-of":[
        "boolean",
        "number",
        "string"
      ]
    },

    "workflow_call-outputs": {
      "mapping": {
        "loose-key-type": "any",
        "loose-value-type": "workflow_call-output"
      }
    },

    "workflow_call-output": {
      "mapping": {
        "properties":{
          "value": "workflow_call-output-context"
        },
        "loose-key-type": "any",
        "loose-value-type": "any"
      }
    },

    "workflow_call-output-context": {
      "context": [
        "github",
        "inputs",
        "jobs"
      ],
      "string": {}
    },

    "workflow_dispatch_wrap": {
      "one-of":[
        "null",
        "workflow_dispatch"
      ]
    },

    "workflow_dispatch": {
      "mapping": {
        "properties":{
          "inputs": "workflow_dispatch-inputs"
        },
        "loose-key-type": "any",
        "loose-value-type": "any"
      }
    },

    "workflow_dispatch-inputs": {
      "mapping": {
        "loose-key-type": "any",
        "loose-value-type": "workflow_dispatch-input"
      }
    },

    "workflow_dispatch-input": {
      "mapping": {
        "properties":{
          "default": "string"
        },
        "loose-key-type": "any",
        "loose-value-type": "any"
      }
    }
  }
}